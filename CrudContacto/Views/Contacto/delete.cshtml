@model ContactoModel
@{
    ViewData["Title"] = "delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<div class="card-header">
		Editar Contacto
	</div>
	<div class="card-body">

		<form asp-action="deleteContacto" asp-controller="Contacto" method="post">

			<input asp-for="IdContacto" type="hidden" class="form-control"/>

			<div class="alert alert-danger" role="alert">
				¿Desea eliminar el contacto : @Html.DisplayTextFor(m => m.Nombre)?
			</div>

			<button type="submit" class="btn btn-danger">Eliminar</button>
			<a asp-action="listContactos" asp-controller="Contacto" class="btn btn-warning">Volver a la lista</a>

		</form>

	</div>
</div>

